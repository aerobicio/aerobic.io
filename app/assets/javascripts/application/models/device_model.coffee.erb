@app.models.DeviceModel = class DeviceModel extends Backbone.Model
  defaults:
    selected: false

  getActivities: ->
    @attributes.activities()

  icon: ->
    switch @get('partNumber')
      when "006-B1036-00" then '<%= asset_path("devices/garmin_510.svg") %>'
      when "010-01064-02" then '<%= asset_path("devices/garmin_510.svg") %>'
      when "006-B1250-00" then '<%= asset_path("devices/garmin_forerunner_410.svg") %>'
      when "010-01128-00" then '<%= asset_path("devices/garmin_forerunner_620.svg") %>'
      when "006-B1499-00" then '<%= asset_path("devices/garmin_swim.svg") %>'
      else                     '<%= asset_path("devices/default.svg") %>'
