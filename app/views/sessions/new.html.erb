<% view = SessionsHelper::NewSessionView.new %>

<div class="dialog panel">
  <%= form_tag sessions_path(provider: "identity") do %>
    <div class="panel__content">
      <%= label_tag(:auth_key, t(".auth_key")) %>
      <%= text_field_tag(:auth_key, "", placeholder: "your_email@example.com") %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <%= button_tag(t(".submit"), class: "button") %>
    </div>
  <% end %>
</div>
