<% cache "#{current_user.cache_key}:#{member.cache_key}" do %>
  <li class="media">
    <%= gravatar_for_member(member, extra_classes: "media__figure") %>

    <div class="media__content">
      <%= link_to(member_path(member)) do %>
        <h4><%= member.name %></h4>
      <% end %>

      <%= member_relationship_status_for_members(current_user, member) %>
      <%= following_link_for_members(current_user, member) %>
    </div>
  </li>
<% end %>
