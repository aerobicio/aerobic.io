<%= extends :application do %>
  <% replace :main do %>
    <section class="<%= area :page_class, 'page' %>">

      <%= area :page do %>
        <%= area :header_outer do %>
          <header class="<%= area :header_class, 'header' %>" role="banner">
            <%= area :header do %>
              <div class="header__inner grid-container">
                <%= area :header_inner do %>
                  <%= area :header_masthead, render(partial: 'shared/header_masthead') -%>
                <% end %>
              </div>
            <% end %>
          </header>
        <% end %>

        <%= area :content_outer do %>
          <section class="<%= area :content_class, 'content' %>" role="main">
            <a href="#" class="burger">
              <span class="burger__bun-top"></span>
              <span class="burger__meat"></span>
              <span class="burger__bun-bottom"></span>
            </a>
            <%= area :content do %>
              <div class="content__inner">
                <%= area :content_inner -%>
              </div>
            <% end %>
          </section>
        <% end %>
      <% end %>

      <%= area :footer_outer do %>
        <footer class="footer ta-center" role="contentinfo">
          <%= area :footer, render(partial: 'shared/footer_content') -%>
        </footer>
      <% end %>

    </section>
  <% end %>
<% end %>
