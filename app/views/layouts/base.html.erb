<%= extends :application do %>
  <% replace :main do %>

    <div class="<%= area :page_class, 'page' %>">
      <%= area :page do %>

        <%= area :header_outer do %>
          <header class="<%= area :header_class, 'header' %>" role="header">
            <%= area :header do %>
              <div class="header__inner">
                <%= area :header_inner do %>
                  <%= area :header_masthead, render(partial: 'shared/header_masthead') %>
                <% end %>
              </div>
            <% end %>
          </header>
        <% end %>

        <%= area :content_outer do %>
          <section class="<%= area :content_class, 'content' %>" role="main">
            <%= area :content do %>
              <div class="content-inner">
                <%= area :content_inner -%>
              </div>
            <% end %>
          </section>
        <% end %>

      <% end %>
    </div>

  <% end %>
<% end %>
