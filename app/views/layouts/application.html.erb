<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= area :title, t("title") %></title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width">
  <%= render partial: "shared/vendor_header_content" %>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= area :head %>
  <%= render partial: "layouts/google_analytics" %>
</head>
<body class="<%= area :body_class %>" <%= area :body_data_attributes %>>
  <%= area :main, yield %>
  <%= area :js %>
  <%= javascript_tag async: 'async', defer: 'defer' do -%>
    $(function() {
      new window.NprogressController({el: $(document)});
    });
  <% end %>
</body>
</html>
