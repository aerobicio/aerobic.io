<% view = Activity::AddedWorkoutView.new(current_user, added_workout) %>

<% cache view.cache_key do %>
  <article class="panel">
    <div class="panel__content">
      <p><%= view.title %></p>
      <ul>
        <li><strong>Duration:</strong> <%= view.duration %></li>
        <li><strong>Distance:</strong> <%= view.distance %></li>
      </ul>
    </div>
  </article>
<% end %>
