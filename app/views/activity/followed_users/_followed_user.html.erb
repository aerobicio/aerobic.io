<% view = Activity::FollowedUserView.new(self, current_user, followed_user) %>

<% cache "#{current_user.cache_key}:#{followed_user.cache_key}" do %>
  <article class="panel">
    <header class="panel__header--padded">
      <figure class="panel__figure">
        <%= gravatar_for_member(view.following_member) %>
      </figure>
      <h6 class="panel__header__heading h6">
        <%= view.title %>
      </h6>
    </header>
  </article>
<% end %>
